{
    "name": "xsanisty/slim-starter",
    "description": "Slim Framework in MVC environment with Eloquent as database provider and Twig as template engine",
    "keywords": ["framework", "slim", "mvc", "eloquent", "twig", "slim-starter"],
    "license": "MIT",
    "authors": [
        {
            "name": "Xsanisty Development Team",
            "email": "developers@xsanisty.com",
            "homepage":"http://www.xsanisty.com/project/slimstarter",
            "role": "developer"
        }
    ],
    "require": {
        "php": ">= 5.5.0",
        "slim/slim": "^3.0@RC",
        "twig/twig": "1.*",
        "illuminate/database" : "5.*",
        "cartalyst/sentinel" : "2.*",
        "ircmaxell/password-compat": "1.0.*"
    },
    "require-dev":{
        "phpunit/phpunit" : "4.*"
    },
    "autoload": {
        "psr-4": {
            "\\" : [
                "src/",
                "app/controllers/",
                "app/models/",
                "app/middlewares/",
                "app/modules/",
                "app/services",
                "app/tests/app",
                "app/tests/src",
                "app/tests"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "chmod -R 777 app/storage"
        ],
        "post-update-cmd": [],
        "post-create-project-cmd": [
            "chmod -R 777 app/storage"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "stable"
}
