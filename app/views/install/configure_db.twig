{% extends 'master.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 text-center">
            <h3 class="page-header">SlimStarter Install</h3>
        </div>
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="login-panel panel panel-default" style="margin-top:10px">
                    <div class="panel-heading">
                        <h3 class="panel-title">Configure Database Connection</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12" id="alert"></div>
                        </div>
                        <form role="form" id="dbsettings" method="post" action="{{baseUrl}}install.php/db/configure" class="form-horizontal">
                            <fieldset>
                                <div class="form-group">
                                    <label for="dbhost" class="control-label col-lg-3">Database Server</label>
                                    <div class="col-lg-9">
                                        <input class="form-control" placeholder="Database Server" name="dbhost" type="text" autofocus>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="dbname" class="control-label col-lg-3">Database Name</label>
                                    <div class="col-lg-9">
                                        <input class="form-control" placeholder="Database Name" name="dbname" id="dbname" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="dbuser" class="control-label col-lg-3">Username</label>
                                    <div class="col-lg-9">
                                        <input class="form-control" placeholder="Username" name="dbuser" id="dbuser" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="dbpass" class="control-label col-lg-3">Password</label>
                                    <div class="col-lg-9">
                                        <input class="form-control" placeholder="password" name="dbpass" id="dbpass" type="password">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="dbdriver" class="control-label col-lg-3">Database Driver</label>
                                    <div class="col-lg-9">
                                        <select class="form-control" placeholder="Database Driver" name="dbdriver">
                                            <option value="mysql">MySQL</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-3 col-md-offset-6 text-center">
                                        <button type="button" id="checkConnection" class="btn btn-md btn-primary btn-block">Check</button>
                                    </div>

                                    <div class="col-md-3 text-center">
                                        <button type="submit" id="saveConfiguration" class="btn btn-md btn-success btn-block" disabled="disabled">Save</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
        </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->
{% endblock %}